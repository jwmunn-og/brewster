<div class="container">
  <div class="col-12 col-md-10 offset-md-1">
      <div class="booyah-box">
        <div class="row">
          <div class="col-3">
            <%= image_tag 'user.png' %>
          </div>

          <div class="col-9">
            <h2><%= @user.email %></h2>
            <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
            <h4><%= @user.comments.count %> total comments</h4>
            <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
          </div>
        </div>
      </div>

      <div class="booyah-box">
        <div class="row">
          <h2 class="text-center col-12">My Comments</h2>
        </div>
        <br />
        <div class="row">
          <% @user.comments.each do |comment| %>
            <div class="col-12 col-md-6">
              <h3><%= link_to comment.place.name, place_path(comment.place) %></h3>
              <blockquote>
                <strong><%= comment.humanized_rating %></strong> - 
                <%= comment.message %>
                <small>- <%= comment.user.email %></small>
              </blockquote>
            </div>
          <% end %>
        </div>
      </div>

  </div>
</div>